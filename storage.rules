rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Mentor credential documents
    match /mentor-docs/{userId}/{fileName} {
      allow read: if request.auth.uid == userId
                  || request.auth.token.email == 'willlinnii@gmail.com';
      allow write: if request.auth.uid == userId
                   && request.resource.size < 10 * 1024 * 1024
                   && (request.resource.contentType == 'application/pdf'
                       || request.resource.contentType == 'image/jpeg'
                       || request.resource.contentType == 'image/png'
                       || request.resource.contentType == 'image/webp');
    }

    // Profile photos — public read for any auth user, owner write
    match /profile-photos/{userId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024
                   && (request.resource.contentType == 'image/jpeg'
                       || request.resource.contentType == 'image/png'
                       || request.resource.contentType == 'image/webp');
    }

    // Guild forum images — auth read, owner write
    match /guild-images/{userId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024
                   && (request.resource.contentType == 'image/jpeg'
                       || request.resource.contentType == 'image/png'
                       || request.resource.contentType == 'image/webp');
    }
  }
}
